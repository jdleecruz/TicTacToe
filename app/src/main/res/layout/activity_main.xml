<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_view_p1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="150dp"
            android:text="Tic-Tac-Toe Variations App"
            android:textAlignment="textStart"
            android:textColor="#FD0404"
            android:textSize="35sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_numerical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_p1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="75dp"
            android:text="Numerical Tic-Tac-Toe"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_rules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_notakto"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="75dp"
            android:text="Rules for Variations"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_wild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_numerical"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="75dp"
            android:text="Wild Tic-Tac-Toe"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_notakto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_wild"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="75dp"
            android:text="Notakto Tic-Tac-Toe"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/wild_imageView"
            android:layout_width="59dp"
            android:layout_height="38dp"
            android:layout_below="@+id/text_view_p1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="105dp"
            android:layout_marginEnd="13dp"
            app:srcCompat="@drawable/tictactoe" />

        <ImageView
            android:id="@+id/numerical_imageView"
            android:layout_width="45dp"
            android:layout_height="36dp"
            android:layout_below="@+id/text_view_p1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="20dp"
            app:srcCompat="@drawable/battle" />

        <ImageView
            android:id="@+id/rules_imageView"
            android:layout_width="41dp"
            android:layout_height="53dp"
            android:layout_below="@+id/text_view_p1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="193dp"
            android:layout_marginEnd="20dp"
            app:srcCompat="@drawable/rules" />

        <ImageView
            android:id="@+id/notakto_imageView"
            android:layout_width="74dp"
            android:layout_height="58dp"
            android:layout_alignTop="@+id/button_numerical"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="94dp"
            android:layout_marginEnd="4dp"
            app:srcCompat="@drawable/notakto" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="78dp"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="71dp"
            app:srcCompat="@drawable/idea" />

    </RelativeLayout>


</LinearLayout>